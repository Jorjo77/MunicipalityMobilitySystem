@model IEnumerable<RepairCenterServiceModel>

@{
    ViewData["Title"] = "Repair Centers Page";
}
<br />
<div class="row">
    @if (this.User?.Identity != null
    && this.User.Identity.IsAuthenticated
    && this.User.IsInRole(AdminRolleName))
    {
    <div class="col-8">
        <h3 class="text-success">Here you can <b>create a Repair Centers:</b> </h3>
        <a asp-area="Admin" asp-controller="RepairCenter" asp-action="Create"
           class="btn btn-outline-success btn-lg">Create</a>
    </div>
    }
    @if (this.User?.Identity != null
    && this.User.Identity.IsAuthenticated
    && this.User.IsInRole(Mechanic))
    {
        <h3 class="text-primary">Here you can <b>enter in your working place using "Details" button:</b> </h3>
    }

</div>



<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Repair Centers List:</h2>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>ID</th>
                <th>Name</th>
                <th>Adress</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var center in Model)
            {
                <tr>
                    <td>@center.Id</td>
                    <td>@center.Name</td>
                    <td>@center.Adress</td>
                    <td>
                        <a asp-area="Admin" asp-action="Details" asp-controller="RepairCenter" asp-route-id="@center.Id" class="btn btn-block btn-outline-info">Details</a>
                        @if (this.User?.Identity != null
                       && this.User.Identity.IsAuthenticated
                       && this.User.IsInRole(AdminRolleName))
                        {
                        <form class="input-group-lg" style="display: inline-block;" asp-area="Admin" asp-controller="RepairCenter"
                          asp-action="Delete" asp-route-id="@center.Id" method="post">
                            <input class="btn btn-block btn-outline-danger" type="submit" value="Delete" onclick="myConfirm(event)" />
                        </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script>

        function myConfirm(e) {

            e.preventDefault();

            Swal.fire({
                title: 'Are you sure you want to delete repair center?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Deleted!',
                        'The repair center has been deleted.',
                        'success'
                    ).then((resultDeleted) => {

                        e.target.parentElement.submit();
                    })
                }
            })
        }
    </script>
}

