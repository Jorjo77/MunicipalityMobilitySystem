@model RepairCenterDetailsServiceModel
@{
    ViewData["Title"] = "Create Repair Center";

    var repairCentersName = (List<RepairCenterServiceModel>)ViewBag.RepairCentersName;
}
<div class="row">
    <div class="col-4">
        <form id="roles" method="post">
            <div class="form-group">
                <b><label asp-for="Name" class="text-success">Enter the name:</label></b>
                <input asp-for="Name" class="form-control" placeholder="Name...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <b><label asp-for="ImageUrl" class="text-success">Enter the image URL:</label></b>
                <input asp-for="ImageUrl" class="form-control" placeholder="...">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <b><label asp-for="Adress" class="text-success">Enter the adress:</label></b>
                <input asp-for="Adress" class="form-control" placeholder="...">
                <span asp-validation-for="Adress" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <b><label asp-for="VehicleParkId" class="text-success">Enter the vehicle park number:</label></b>
                <input asp-for="VehicleParkId" class="form-control" placeholder="...">
                <span asp-validation-for="VehicleParkId" class="small text-danger"></span>
            </div>
            <input class="btn btn-primary mt-3" type="submit" value="Save" />
        </form>
    </div>
</div>
<hr />
<br />

<div class="card" style="width: 18rem;">
    <div class="card-header">
        <b>Avaible repair centers:</b>
    </div>
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Repair center name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (repairCentersName.Count() != 0)
            {
                @foreach (var rc in repairCentersName)
                {
                    <tr>
                        <td>@rc.Name</td>
                        <td>
                            <form class="input-group-lg" style="display: inline-block;" asp-area="Admin" asp-controller="RepairCenter"
                          asp-action="Delete" asp-route-id="@rc.Id" method="post">
                                <input class="btn btn-block btn-outline-danger" type="submit" value="Delete" />
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>Repair centers do not exists!</tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

