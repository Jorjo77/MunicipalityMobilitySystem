@model RepairCenterServiceModel

@{
    ViewBag.Title = "Details";

    var vehiclesForRepair = (List<VehicleDetailsViewModel>)ViewBag.VehiclesForRepair;
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr/>
<h3>Wellcome to @Model.Name!</h3>
<h4>@Model.Name is your working place</h4>
<h5 class="card-text">Adress: <b>@Model.Adress</b></h5>
<div class="card" style="flex-flow:column">
    <div class="card-body">
        <img class="card-img-top" style="height:400px" src="@Model.ImageUrl" alt="Vehicle Image">
    </div>
</div>
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Vehicles for repair list: </h2>
    </div>
</div>
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Registration number</th>
                <th>Model</th>
                <th>Failure Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @if (vehiclesForRepair != null)
        {
            
            @foreach (var vehicle in vehiclesForRepair)
            {
                <tr>
                    <td>@vehicle.RegistrationNumber</td>
                    <td>@vehicle.Model</td>
                    <td>@vehicle.FailureDescription</td>
                    <td>
                            <form class="input-group-lg" style="display: inline-block;" asp-area="Admin" asp-controller="RepairCenter"
                          asp-action="Repair" asp-route-id="@vehicle.Id" method="post">
                            <input class="btn btn-block btn-outline-info" type="submit" value="Repaired" />
                        </form>
@*                        <form class="input-group-lg" style="display: inline-block;" asp-area="Admin" asp-controller="RepairCenter"
                          asp-action="Delete" asp-route-id="@vehicle.Id" method="post">
                            <input class="btn btn-block btn-outline-danger" type="submit" value="Order parts"/>
                        </form>*@
                    </td>
                </tr>
                
            }
        }
        else
        {
                <tr>
                    <td>There are no vehicles for repair yet!</td>
                    <td></td>
                    <td></td>
                </tr>
        }
        </tbody>
    </table>
</div>

