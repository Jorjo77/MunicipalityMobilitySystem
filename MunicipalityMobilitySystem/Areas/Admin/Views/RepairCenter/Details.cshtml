@model RepairCenterServiceModel

@{
    ViewBag.Title = "Details";

    var vehiclesForRepair = (List<VehicleDetailsViewModel>)ViewBag.RepairCentersName;
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr/>
<h3>Wellcome to @Model.Name!</h3>
<h4>@Model.Name is your working place</h4>
<div class="card" style="flex-flow:column">
    <div class="card-body">
        <img class="card-img-top" src="@Model.ImageUrl" alt="Vehicle Image">
        <h5 class="card-text">Adress: <b>@Model.Adress</b></h5>
    </div>
</div>
<hr />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Vehicles for repair list </h2>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Registration number</th>
                <th>Model</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicle in vehiclesForRepair)
            {
                <tr>
                    <td>@vehicle.RegistrationNumber</td>
                    <td>@vehicle.Model</td>
                    <td>
                        ///ToDo: To buiold buttons functionality!!!!!!
                        <a asp-area="Admin" asp-action="Details" asp-controller="RepairCenter" asp-route-id="@vehicle.Id" class="btn btn-block btn-outline-info">Repair</a>
                        <form class="input-group-lg" style="display: inline-block;" asp-area="Admin" asp-controller="RepairCenter"
                          asp-action="Delete" asp-route-id="@vehicle.Id" method="post">
                            <input class="btn btn-block btn-outline-danger" type="submit" value="Order parts"/>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

