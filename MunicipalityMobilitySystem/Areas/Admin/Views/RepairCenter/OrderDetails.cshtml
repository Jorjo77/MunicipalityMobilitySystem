@model OrderDetailsViewModel

@{
    ViewBag.Title = "Order Details";
    ;
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <div class="card mb-6">
            <div class="card-body text-center">
                <h4>Order Number: <b>@Model.Id</b></h4>
                <h4>Title: <b>@Model.Title</b></h4>
                <h5>Reg. number: <b>@Model.RegistrationNumber</b></h5>
                <div>
                    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
                        <thead class="thead-dark">
                            <tr class="table-info">
                                <th>Expense title</th>
                                <th>Quantity</th>
                                <th>Price per unit</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Expenses != null)
                            {
                                foreach (var expense in Model.Expenses)
                                {
                                    <tr>
                                        <td>@expense.Name</td>
                                        <td>@expense.Quantity</td>
                                        <td>@expense.UnutPrice</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td>There are no expenses yet!</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <h5>Total Price: <b>@Model.TotalPrice BGN</b></h5>
                </div>
            </div>
        </div>
    </div>
</div>