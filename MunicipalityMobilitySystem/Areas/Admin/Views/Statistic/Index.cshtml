@model StatisticViewModel
@{
    ViewData["title"] = "Home Page";

    StatisticVehicleModel[] topVehicles = new StatisticVehicleModel[3]
    {
        Model.TopBike,
        Model.TopCar,
        Model.TopScooter
    };

    var topVehiclesCollection = Model.TopVehicles;

    bool first = true;
}

<h1 class="text-primary">Wellcome to your Mobility System</h1>
<h4>Using this platform <b>you can get the statistical information</b> that you need for <b>proper business decisions</b></h4>

<div class="mb-5"></div>

<div id="carouselexamplecontrols" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @foreach (var vehicle in topVehicles)
        {
            var totalIncome = (vehicle.RentedPeriod.GetValueOrDefault().TotalHours * vehicle.PricePerHour);
            <div class="carousel-item @(first ? "active" : string.Empty)">
                <img class="d-block w-90" style="height:400px"
                 src="@vehicle.ImageUrl" alt="@vehicle.Model">
                <h5>Model: <b>@vehicle.Model</b></h5>
                <h5>Price her hour: <b>@vehicle.PricePerHour BGN</b></h5>
                <h5>Rented Period: <b>@vehicle.RentedPeriod.GetValueOrDefault().TotalHours.ToString("F2") hours</b></h5>
                <h5>Total income: <b>@totalIncome.ToString("F2") BGN</b></h5>
            </div>

            first = false;
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<br />
<h3 class="text-primary">My vehicle parks statistics:</h3>
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Number of vehicle parks</th>
                <th>Number of rented vehicles</th>
                <th>Number of free vehicles</th>
            </tr>
        </thead>
        <tbody>
             <tr>
                 <td>@Model.TotalVehicleParks</td>
                 <td>@Model.TotalRentedVehicles</td>
                 <td>@Model.TotalFreeVehicles</td>
             </tr>
        </tbody>
    </table>
</div>
<br />
<h3 class="text-primary">My top vehicles statistics:</h3>
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Registration number</th>
                <th>Model</th>
                <th>Engine Type</th>
                <th>Rented Period</th>
                <th>Price per hour</th>
                <th>Total income</th>
                <th>Rents Count</th>
                <th>Repairs Count</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var vehicle in topVehiclesCollection)
            {
              var rentedPeriod = vehicle.RentedPeriod.GetValueOrDefault().TotalHours.ToString("F2");
              var totalIncome = (vehicle.RentedPeriod.GetValueOrDefault().TotalHours * vehicle.PricePerHour);
                <tr>
                    <td>@vehicle.RegistrationNumber</td>
                        <td>@vehicle.Model</td>
                        <td>@vehicle.EngineType</td>
                        <td>@rentedPeriod hours</td>
                        <td>@vehicle.PricePerHour BGN</td>
                        <td>@totalIncome.ToString("F2") BGN</td>
                        <td>@vehicle.RentsCount</td>
                        <td>@vehicle.RepairsCount</td>

                    </tr>
            }
        </tbody>
    </table>
</div>



