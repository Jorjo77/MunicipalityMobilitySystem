@model WashingCenterServiceModel

@{
    ViewBag.Title = "Details";

    var vehiclesForWashing = (List<VehicleDetailsViewModel>)ViewBag.VehiclesForWashing;
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr/>
<h3>Wellcome to @Model.Name!</h3>
<h4>@Model.Name is your working place</h4>
<h5 class="card-text">Adress: <b>@Model.Adress</b></h5>
<div class="card" style="flex-flow:column">
    <div class="card-body">
        <img class="card-img-top" style="height:500px" src="@Model.ImageUrl" alt="Vehicle Image">
    </div>
</div>
<hr />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Vehicles for washing</h2>
    </div>
</div>
<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Registration number</th>
                <th>Model</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (vehiclesForWashing != null)
            {

                @foreach (var vehicle in vehiclesForWashing)
            {
                <tr>
                    <td>@vehicle.RegistrationNumber</td>
                    <td>@vehicle.Model</td>
                    <td>
                        <form class="input-group-lg" style="display: inline-block;" asp-area="Admin" asp-controller="WashingCenter"
                          asp-action="Wash" asp-route-id="@vehicle.Id" method="post">
                                <input class="btn btn-block btn-outline-info" type="submit" value="Washed" />
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
                <tr>
                    <td>There are no vehicles for washing yet!</td>
                    <td></td>
                    <td></td>
                </tr>
        }
        </tbody>
    </table>
</div>

