@using Microsoft.AspNetCore.Identity;
@model RoleViewModel
@{
    ViewData["Title"] = "Create Role";
    var roleNames = (List<IdentityRole>)ViewBag.RoleNames;
}
<div class="row">
    <div class="col-4">
        <form id="roles" method="post">
            <div class="form-group">
                <b><label asp-for="RoleName" class="text-success">Enter role name:</label></b>
                <input asp-for="RoleName" class="form-control" placeholder="Role name...">
                <span asp-validation-for="RoleName" class="small text-danger"></span>
            </div>
            <input class="btn btn-primary mt-3" type="submit" value="Save" />
        </form>
    </div>
</div>
<hr />
<br />

<div class="card" style="width: 18rem;">
  <div class="card-header">
    <b>Avaible roles:</b>
  </div>
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Role name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in roleNames)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <form class="input-group-lg" style="display: inline-block;" asp-area="Admin" asp-controller="User"
                          asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                            <input class="btn btn-block btn-outline-danger" type="submit" value="Delete"/>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


