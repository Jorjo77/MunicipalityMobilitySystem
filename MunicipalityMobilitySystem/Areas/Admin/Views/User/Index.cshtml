@model IEnumerable<UserServiceModel>

@{
    ViewData["Title"] = "Users Page";
}
<br />
<div class="row">
    <div class="col-8">
        @if (this.User?.Identity != null
        && this.User.Identity.IsAuthenticated
        && this.User.IsInRole(AdminRolleName))
        {
            <h3 class="text-success">Here you can <b>create a role:</b> </h3>
            <a asp-area="Admin" asp-controller="User" asp-action="CreateRole"
           class="btn btn-outline-success btn-lg">Create Role</a>
        }
    </div>
</div>

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Users List </h2>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>ID</th>
                <th>Username</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>
                        @if (this.User?.Identity != null
                       && this.User.Identity.IsAuthenticated
                       && this.User.IsInRole(AdminRolleName))
                        {
                            <a asp-area="Admin" asp-action="Roles" asp-controller="User" asp-route-id="@user.Id" class="btn btn-block btn-outline-info">Add user to Roles</a>
                            <form class="input-group-lg" style="display: inline-block;" asp-area="Admin" asp-controller="User"
                          asp-action="Delete" asp-route-id="@user.Id" method="post">
                                <input class="btn btn-block btn-outline-danger" type="submit" value="Delete user" onclick="myConfirm(event)" />
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script>

        function myConfirm(e) {

            e.preventDefault();

            Swal.fire({
                title: 'Are you sure you want to delete user?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Deleted!',
                        'The user has been deleted.',
                        'success'
                    ).then((resultDeleted) => {

                        e.target.parentElement.submit();
                    })
                }
            })
        }
    </script>
}

