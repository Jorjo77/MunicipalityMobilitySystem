@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - here you can <b>read</b>, <b>create</b>,
        <b>edit</b> and <b>delete</b> vehicles and vehicle parks.
        <br />You can <b>create roles</b> and <b>put users into roles!</b>
        <br />You can <b>rent</b> and <b>leave</b> the free one vehicles, too!
    </p>
    <p class="lead mt-1">
        You can also see <b>all users</b> and <b>all rents</b> in the system.
    </p>
    <hr class="my-4">
    <div />

    <div>
        <span>  |   </span>
        <div>
            <label>Here you can <b>read, create, edit</b> and <b>delete</b> vehicle parks</label>
        </div>
        <a asp-area="Admin" asp-controller="VehiclePark" asp-action="AllVehicleParks"
           class="btn btn-primary btn-lg">Vehicle Parks</a>
    </div>
    <div>
        <span>  |   </span>
        <div>
            <label>Here you can <b>read, create, edit</b> and <b>delete</b> vehicles</label>
        </div>
        <a asp-area="Admin" asp-controller="Vehicle" asp-action="All"
           class="btn btn-primary btn-lg">Vehicles</a>
    </div>
     <div>
        <span>  |   </span>
        <div>
            <label>Here you can <b>read, create, edit</b> and <b>delete</b> vehicle repair centers</label>
        </div>
        <a asp-area="Admin" asp-controller="RepairCenter" asp-action="Index"
           class="btn btn-primary btn-lg">Repair Centers</a>
    </div>
    <div>
        <span>  |   </span>
        <div>
            <label>Here you can <b>read, create, edit</b> and <b>delete</b> wasing centers</label>
        </div>
        <a asp-area="Admin" asp-controller="WashingCenter" asp-action="Index"
           class="btn btn-primary btn-lg">Washing Centers</a>
    </div>
    <div>
        <span>  |   </span>
        <div>
            <label>Here you can <b>read list of users, create roles, put users into roles</b> and <b>forget user</b></label>
        </div>
        <a asp-area="Admin" asp-controller="User" asp-action="Index"
           class="btn btn-primary btn-lg">Users & Roles</a>
    </div>
</div>

