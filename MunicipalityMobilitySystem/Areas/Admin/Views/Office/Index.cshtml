@model IEnumerable<VehicleDetailsViewModel>

@{
    ViewData["Title"] = "Office Page";
}
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Lived vehicles list: </h2>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Registration number</th>
                <th>Model</th>
                <th>Rented period</th>
                <th>Price per hour</th>
                <th>RenterId</th>
                <th>Check</th>
                <th>Failure description</th>
                <th>Actions</th>
                <th>The bill</th>
            </tr>
        </thead>
        <tbody>
            @{
                decimal theBill;
            }
            @foreach (var vehicle in Model)
            {
                theBill = vehicle.RentedPeriod.Value.Hours * vehicle.PricePerHour;
                <tr>
                    <td>@vehicle.Id</td>
                    <td>@vehicle.RegistrationNumber</td>
                    <td>@vehicle.Model</td>
                    <td>@vehicle.RentedPeriod</td>
                    <td>@vehicle.PricePerHour</td>
                    <td>@vehicle.RenterId</td>
                    <td></td>
                    <td>@vehicle.FailureDescription</td>
                    <td>//To add checkboxes!!!!!!</td>
                    <td>
                        <form class="input-group-lg" style="display: inline-block;" asp-area="Admin" asp-controller="User"
                          asp-action="Delete" asp-route-id="@vehicle.Id" method="post">
                            <input class="btn btn-block btn-outline-danger" type="submit" value="Add to vehicles for cleaning" />
                        </form>
                        <form class="input-group-lg" style="display: inline-block;" asp-area="Admin" asp-controller="User"
                          asp-action="Delete" asp-route-id="@vehicle.Id" method="post">
                            <input class="btn btn-block btn-outline-danger" type="submit" value="Add to vehicles for repairing" />
                        </form>
                        <form class="input-group-lg" style="display: inline-block;" asp-area="Admin" asp-controller="User"
                          asp-action="Delete" asp-route-id="@vehicle.Id" method="post">
                            <input class="btn btn-block btn-outline-danger" type="submit" value="Add to vehicles for rent" />
                        </form>
                    </td>
                    <td>@theBill</td>
                </tr>
            }
        </tbody>
    </table>
</div>


