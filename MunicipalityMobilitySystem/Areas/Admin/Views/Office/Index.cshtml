@model IEnumerable<VehicleDetailsViewModel>

@{
    ViewData["Title"] = "Office Page";
}
<br />
<div class="row">
    <div class="col-6">
        <h3>Welcome to vehicle parks office</h3>
        <h3>Here is your working place</h3>
        <br />
        <h4>Here you can check the left vehicles and send vehicles with failure description if need to repair or washing center</h4>
    </div>
</div>
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Lived vehicles list: </h2>
    </div>
</div>
<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Registration number</th>
                <th>Model</th>
                <th>Rented period</th>
                <th>Price per hour</th>
                <th>The bill</th>
                <th>Check</th>
                <th>Failure description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                decimal theBill;
                bool first = true;
            }
            @foreach (var vehicle in Model)
            {
                var rentedPeriod = (vehicle.MomenOfLeave.GetValueOrDefault() - vehicle.MomenOfRent.GetValueOrDefault()).TotalHours;
                theBill = (decimal)rentedPeriod * vehicle.PricePerHour;
                <tr>
                    <td>@vehicle.RegistrationNumber</td>
                    <td>@vehicle.Model</td>
                    <td>@rentedPeriod.ToString("F2") hours</td>
                    <td>@vehicle.PricePerHour BGN</td>
                    <td>
                        @theBill.ToString("F2") BGN
                        <div class="col-8">
                            <p></p>
                            @if (this.User?.Identity != null
                           && this.User.Identity.IsAuthenticated
                           && this.User.IsInRole(Manager))
                            {
                                <form class="input-group-lg" style="display: inline-block;" asp-area="Admin" asp-controller="Office"
                              asp-action="MakeTheBill" asp-route-id="@vehicle.Id" method="post">
                                    <input class="btn btn-outline-success btn-lg mb-3" type="submit" value="Make&Send">
                                </form>
                            }
                        </div>
                    </td>
                    <td>
                        <ul>
                            <li>Interior</li>
                            <li>Exterior</li>
                            <li>Engine</li>
                            <li>Gear</li>
                            <li>Tyres</li>
                            <li>Electro</li>
                        </ul>
                    </td>
                    <td>
                        <div class="col-8">
                            <p></p>
                            @if (this.User?.Identity != null
                           && this.User.Identity.IsAuthenticated
                           && this.User.IsInRole(Manager))
                            {
                                <a asp-area="Admin" asp-controller="Office" asp-action="CreateFailureDescription" asp-route-id="@vehicle.Id"
                           class="btn btn-outline-success btn-lg mb-3 @(vehicle.FailureDescription != null ? "disabled" : string.Empty)">Create</a>
                            }
                        </div>
                    </td>
                    <td>
                        @if (this.User?.Identity != null
                       && this.User.Identity.IsAuthenticated
                       && this.User.IsInRole(Manager))
                        {
                            <form class="input-group-lg" style="display: inline-block;" asp-area="Admin" asp-controller="Office"
                          asp-action="SetForCleaning" asp-route-id="@vehicle.Id" method="post">
                                <input class="btn btn-block btn-primary @(vehicle.FailureDescription != null ? "disabled" : string.Empty)" type="submit" value="Send for cleaning" />
                            </form>
                            <p></p>
                            <form class="input-group-lg" style="display: inline-block;" asp-area="Admin" asp-controller="Office"
                          asp-action="SetForRepairing" asp-route-id="@vehicle.Id" method="post">
                                <input class="btn btn-block btn-warning" type="submit" value="Send for repairing" />
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



