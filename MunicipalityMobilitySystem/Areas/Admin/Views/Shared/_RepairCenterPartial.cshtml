@model RepairCenterServiceModel

<div class="col-md-6">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ImageUrl" alt="Vehicle Park Image">
        <div class="card-body text-center">
            <h4>@Model.Name</h4>
            <h6>Adress: <b>@Model.Adress</b></h6>
            <div class="row">
            <h4 class="text-primary">Vehicles for repair list: </h4>
            </div>
            <div >
                <table id="tblData" class="table table-striped table-bordered" style="width:102%">
                    <thead class="thead-dark">
                        <tr class="table-info">
                            <th>Registration number</th>
                            <th>Model</th>
                            <th>Failure Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.VehiclesForRepair != null)
                        {
                            foreach (var vehicle in Model.VehiclesForRepair)
                            {
                                <tr>
                                    <td>@vehicle.RegistrationNumber</td>
                                    <td>@vehicle.Model</td>
                                    <td>@vehicle.FailureDescription</td>
                                    <td>
                                        @if (this.User?.Identity != null
                                       && this.User.Identity.IsAuthenticated
                                       && this.User.IsInRole(Mechanic))
                                        {
                                            <a asp-area="Admin" asp-controller="RepairCenter" asp-action="CreateOrder" asp-route-id="@vehicle.Id"
                                               class="btn btn-block btn-primary">Order parts</a>
                                            <p></p>
                                            <form class="input-group-sm" style="display: inline-block;" asp-area="Admin" asp-controller="RepairCenter"
                                      asp-action="Repair" asp-route-id="@vehicle.Id" method="post">
                                                <input class="btn btn-block btn-success" type="submit" value="Repaired" />
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td>There are no vehicles for repair yet!</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


