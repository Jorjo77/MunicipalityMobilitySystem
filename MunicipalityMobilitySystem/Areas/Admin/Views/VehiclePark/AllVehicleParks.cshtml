@model IEnumerable<VehicleParkModel>

@{
    ViewBag.Title = "All Vehicle Parks";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<h4>The Mobility System has @Model.Count() vehicle parks:</h4>
<div>
    <div>
        <label>Here you can <b> create vehicle park</b></label>
    </div>
    <a asp-area="Admin" asp-controller="VehiclePark" asp-action="Create"
       class="btn btn-success btn-lg">Create Vehicle Park</a>
</div>
<br />

<div class="row">
    @foreach (var park in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <img class="card-img-top" src="@park.ImageUrl" alt="Vehicle Park Image">
                <div class="card-body text-center">
                    <h4>@park.Name</h4>
                    <h6>Adress: <b>@park.Adress</b></h6>
                    <h6>
                        Phone:
                        <b>@park.Phone</b>
                    </h6>
                    <h6>
                        Email:
                        <b>@park.Email</b>
                    </h6>
                    <br />
                    <a asp-area="" asp-controller="VehiclePark" asp-action="Details"
                   asp-route-id="@park.Id" class="btn btn-primary">Details</a>
                    <a asp-area="Admin" asp-controller="VehiclePark" asp-action="Edit" asp-route-id="@park.Id"
                   class="btn btn-warning">Edit</a>
                    <a asp-area="Admin" asp-controller="VehiclePark" asp-action="Delete" asp-route-id="@park.Id"
                   class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>