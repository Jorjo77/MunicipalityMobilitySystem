@model VehicleServiceModel

<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ImageUrl" alt="Vehicle Image">
        <div class="card-body text-center">
            <h4>@Model.Model</h4>
            <h6>Rating: <b>@Model.Rating</b></h6>
            <h6>
                Price Per Hour:
                <b>@String.Format("{0:f2}", Model.PricePerHour) BGN</b>
            </h6>
            <h6>(@(Model.RenterId!= null? "Rented" : "Not Rented"))</h6>
            <br />

            @if (this.User?.Identity != null && this.User.Identity.IsAuthenticated)
            {
                <form class="input-group-lg" style="display: inline-block;" asp-area="" asp-controller="Vehicle"
                  asp-action="Details" asp-route-id="@Model.Id" method="post">
                    <input class="btn btn-primary" type="submit" value="Details" />
                </form>
                @if (Model.RenterId == null)
                {
                    <form class="input-group-lg" style="display: inline-block;" asp-area="" asp-controller="Vehicle"
                  asp-action="Rent" asp-route-id="@Model.Id" method="post">
                        <input class="btn btn-success" type="submit" value="Rent" />
                    </form>
                }
                else
                {
                    <form class="input-group-lg" style="display: inline-block;" asp-area="" asp-controller="Vehicle" asp-action="Leave"
                  asp-route-id="@Model.Id" method="post">
                        <input class="btn btn-warning" type="submit" value="Leave" />
                    </form>
                }
                <p></p>
                @if (this.User?.Identity != null
               && this.User.Identity.IsAuthenticated
               && this.User.IsInRole(AdminRolleName))
                {
                    <a asp-area="Admin" asp-controller="Vehicle" asp-action="Edit" asp-route-id="@Model.Id"
               class="btn btn-warning btn-lg">Edit</a>

                    <form class="input-group-lg" style="display: inline-block;" asp-area="Admin" asp-controller="Vehicle"
                  asp-action="Delete" asp-route-id="@Model.Id" method="post">
                        <input class="btn btn-danger" type="submit" value="Delete" onclick="myConfirm(event)" />
                    </form>
                }
            }
        </div>
    </div>
</div>


