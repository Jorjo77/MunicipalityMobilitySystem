@model VehicleParkDetailsModel

@{
    ViewBag.Title = "Details";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr/>
<h3>Wellcome to @Model.Name!</h3>
<h4>@Model.Name is your best choice of this area!</h4>
<div class="card" style="flex-flow:column">
    <div class="card-body">
        <h4 class="card-title">Park Info:</h4>
        <h5 class="card-text">Park Name: <b>@Model.Name</b></h5>
        <h5 class="card-text">Email: <b>@Model.Email</b></h5>
        <h5 class="card-text">Phone Number: <b>@Model.Phone</b></h5>
        <h5 class="card-text">Adress: <b>@Model.Adress</b></h5>
         <img class="d-block w-100" style="height:380px"
             src="@Model.ImageUrl" alt="@Model.Name">
             <p></p>
        <h5 class="card-text">Description: <b>@Model.Description</b></h5>
    </div>
</div>


@{
    if (this.User?.Identity != null && this.User.Identity.IsAuthenticated)
    {
        <a class="btn btn-primary" asp-controller="VehiclePark" asp-action="All" asp-route-id="@Model.Id">Find all our vehicles</a>
    }
    else
    {
        <h2>Login to find all our vehicles for a rent!</h2>
    }
}

